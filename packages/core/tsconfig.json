{
  "extends": "@acme/tsconfig/internal-package.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@acme/core/*": ["./src/*"]
    },
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
